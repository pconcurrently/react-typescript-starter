{
    "extends": "tslint:latest",
    "alwaysShowStatus": true,
    "rules": {
        // override tslint-react rules here
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "quotemark": [true, "single"],
        "member-access": false,
        "interface-name": false
    }
}
