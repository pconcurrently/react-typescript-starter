{
    "extends": "tslint:latest tslint:react",
    "alwaysShowStatus": true,
    "rules": {
        // override tslint-react rules here
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    }
}
